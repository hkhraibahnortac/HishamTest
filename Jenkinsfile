pipeline {
   agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    post {
        failure {
            emailext attachmentsPattern: 'test.zip', body: '''${SCRIPT, template="groovy-html.template"}''',
                subject: "${env.JOB_NAME} - Build # ${env.BUILD_NUMBER} - Failed",
                mimeType: 'text/html',to: "h.khraibah@nortacdefence.com, djw@nortacdefence.com, e.gogate@nortacdefence.com"
        }
        success {
            emailext attachmentsPattern: 'test.zip', body: '''${SCRIPT, template="groovy-html.template"}''', 
                subject: "${env.JOB_NAME} - Build # ${env.BUILD_NUMBER} - Successful",
                mimeType: 'text/html',to: "h.khraibah@nortacdefence.com, djw@nortacdefence.com, e.gogate@nortacdefence.com"
        }      
    }
}
